@using CTDT.Helper
@{ 
    var user = SessionHelper.GetUser();
}
<div class="header">
    <div class="logo logo-dark">
        <a href="#">
            <img src="https://tdmu.edu.vn/hinh/Icon.png" alt="Logo" style="width: 66px;">
            <img class="logo-fold" src="https://tdmu.edu.vn/hinh/Icon.png" alt="Logo" style=" width: 63px; ">
        </a>
    </div>
    <div class="logo logo-white">
        <a href="#">
            <img src="https://tdmu.edu.vn/hinh/Icon.png" alt="Logo" style="width: 66px;">
            <img class="logo-fold" src="https://tdmu.edu.vn/hinh/Icon.png" alt="Logo" style=" width: 63px; ">
        </a>
    </div>
    <div class="nav-wrap">
        <ul class="nav-left">
            <li class="desktop-toggle">
                <a href="javascript:void(0);">
                    <i class="anticon"></i>
                </a>
            </li>
            <li class="mobile-toggle">
                <a href="javascript:void(0);">
                    <i class="anticon"></i>
                </a>
            </li>
            <li>
                <h5>Xin chào: <b>@user.firstName @user.lastName</b></h5>
                <span>Cấp quyền: <b>Quản trị viên</b></span>
            </li>
        </ul>
        <ul class="nav-right">
            <li class="dropdown dropdown-animated scale-left">
                <div class="pointer" data-toggle="dropdown">
                    <div class="avatar avatar-image  m-h-10 m-r-15">
                        <img src="@user.avatarUrl" alt="">
                    </div>
                </div>
                <div class="p-b-15 p-t-20 dropdown-menu pop-profile">
                    <div class="p-h-20 p-b-15 m-b-10 border-bottom">
                        <div class="d-flex m-r-50">
                            <div class="avatar avatar-lg avatar-image">
                                <img src="@user.avatarUrl" alt="">
                            </div>
                            <div class="m-l-10">
                                <p class="m-b-0 text-dark font-weight-semibold">@user.firstName @user.lastName</p>
                                <p class="m-b-0 opacity-07">@user.typeusers.name_typeusers</p>
                            </div>
                        </div>
                    </div>                   
                </div>
            </li>
            <li>
                <a href="javascript:void(0);" data-toggle="modal" data-target="#quick-view">
                    <i class="anticon anticon-appstore"></i>
                </a>
            </li>
        </ul>
    </div>
</div>