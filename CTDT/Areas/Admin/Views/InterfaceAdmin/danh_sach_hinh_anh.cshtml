@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<style>
    .thumbnail-img {
        max-height: 50px;
        cursor: pointer;
        border: 1px solid #ccc;
        border-radius: 4px;
    }

    #imageModal {
        display: none;
        position: fixed;
        z-index: 9999;
        padding-top: 60px;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        overflow: auto;
        background-color: rgba(0,0,0,0.8);
    }

        #imageModal img {
            margin: auto;
            display: block;
            max-width: 90%;
            max-height: 80vh;
        }

        #imageModal .close {
            position: absolute;
            top: 20px;
            right: 40px;
            color: #fff;
            font-size: 40px;
            font-weight: bold;
            cursor: pointer;
        }
</style>

<div class="main-content">
    <div class="card">
        <div class="card-body">
            <div class="page-header no-gutters">
                <h2 class="text-uppercase">danh sách hệ đào tạo</h2>
                <hr />
                <fieldset class="border rounded-3 p-3">
                    <legend class="float-none w-auto px-3">Chức năng</legend>
                    <hr />
                    <div class="row mb-3 align-items-center">
                        <!-- Nhóm các nút bên phải -->
                        <div class="col-12 col-md-6 d-flex flex-wrap justify-content-md-end justify-content-center gap-3">
                            <button class="btn btn-primary w-100 w-md-auto px-4 py-2" id="btnAdd">
                                <i class="fas fa-plus me-1"></i> Thêm mới hình
                            </button>
                        </div>
                    </div>
                </fieldset>
            </div>

            <div id="imageModal">
                <span class="close">&times;</span>
                <img id="modalImage" src="" alt="Full size" />
            </div>
            <!-- Modal -->
            <div class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog">
                <div class="modal-dialog modal-lg" role="document">
                    <div class="modal-content">

                        <div class="modal-header">
                            <h5 class="modal-title h4">Tải lên hình ảnh</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <i class="anticon anticon-close"></i>
                            </button>
                        </div>

                        <div class="modal-body">
                            <div class="row mb-3 align-items-center">
                                <div class="col-md-6">
                                    <input type="file" id="imageUploadInput" class="form-control" accept="image/*" />
                                </div>
                                <div class="col-md-6">
                                    <button class="btn btn-success" id="btnUploadImage">
                                        <i class="fas fa-upload me-1"></i> Tải lên hình
                                    </button>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-12 text-center">
                                    <img id="previewImage" src="#" alt="Xem trước hình ảnh" class="img-thumbnail d-none" style="max-height: 300px;" />
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

            <div id="loadingSpinner" style="display:none" class="loader"></div>
            <div class="m-t-25">
                <div class="table-responsive">
                    <table id="data-table" class="table table-bordered">
                        <!---->
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section scriptsAdmin{
    <script src="~/Areas/Admin/Scripts/ChucNangNguoiDung/DanhSachHinhAnh.js"></script>
}


