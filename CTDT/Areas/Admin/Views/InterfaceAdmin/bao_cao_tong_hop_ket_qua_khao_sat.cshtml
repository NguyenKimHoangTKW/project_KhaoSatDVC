@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="main-content">
    <div class="card">
        <div class="card-body">
            <ul class="nav nav-tabs" id="myTab" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Báo cáo tổng hợp</a>
                </li>
            </ul>
            <div class="tab-content m-t-15" id="myTabContent">
                <div class="tab-pane fade show active" id="profile" role="tabpanel" aria-labelledby="home-tab">
                    <div class="page-header no-gutters">
                        <h2 class="text-uppercase">Báo cáo tổng hợp</h2>
                        <hr />
                        <fieldset class="border rounded-3 p-3">
                            <legend class="float-none w-auto px-3">Chức năng</legend>
                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <label class="form-label" style="font-size: 16px; font-weight: bold; color: #333;">Chọn hệ</label>
                                    <select class="form-control select2" id="hedaotao">
                                        @foreach (var item in ViewBag.HeDaoTao)
                                        {
                                            <option value="@item.Value">@item.Text</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label" style="font-size: 16px; font-weight: bold; color: #333;">Chọn năm học</label>
                                    <select class="form-control select2" id="year">
                                        @foreach (var item in ViewBag.Year)
                                        {
                                            <option value="@item.Value">@item.Text</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label" style="font-size: 16px; font-weight: bold; color: #333;">Chọn phiếu khảo sát</label>
                                    <select class="form-control select2" name="states[]" multiple="multiple" id="survey">
                                        <option value="">Chọn phiếu khảo sát</option>
                                    </select>
                                </div>
                            </div>
                            <hr />
                            <div class="row">
                                <div class="col-12 d-flex flex-wrap gap-2 justify-content-start justify-content-md-end">
                                    <button class="btn btn-info" id="fildata">
                                        <i class="fas fa-plus mr-1"></i> Lọc dữ liệu
                                    </button>
                                    <button class="btn btn-success" id="exportExcel">
                                        <i class="fas fa-file-excel mr-1"></i> Xuất Excel
                                    </button>
                                </div>
                            </div>
                        </fieldset>
                    </div>
                    <div id="loadingSpinner" style="display:none" class="loader"></div>
                    <div class="m-t-25" id="showalldata">
                        <div class="table-responsive" id="bao_cao_tong_hop">
                            <div class="accordion" id="accordion-default">
                                <!--data-->
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scriptsAdmin{
    <script src="~/Areas/Admin/Scripts/ChucNangNguoiDung/BaoCaoTongHopKetQuaKhaoSat.js"></script>
}
