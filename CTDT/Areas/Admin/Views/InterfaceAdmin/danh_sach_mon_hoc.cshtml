@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="main-content">
    <div class="card">
        <div class="card-body">
            <div class="page-header no-gutters">
                <div class="col-lg-12">
                    <div class="mb-4" style="border: 1px solid #9caab9; padding: 15px; border-radius: 8px; background-color: #fcfcfc;">
                        <p style="font-weight:bold;font-size:25px;text-align:center;color:black">DANH SÁCH MÔN HỌC</p>
                        <div class="row items-push">
                            <div class="col-3">
                                <label class="form-label" style="font-size: 16px;font-weight: bold;color: #333">Lọc theo năm học</label>
                                <select class="form-control select2" id="nam-hoc">
                                    @foreach (var items in ViewBag.Year)
                                    {
                                        <option value="@items.Value">@items.Text</option>
                                    }
                                </select>
                            </div>
                            <div class="col-3">
                                <label class="form-label" style="font-size: 16px;font-weight: bold;color: #333">Lọc theo học phần</label>
                                <select class="form-control select2" id="hoc-phan">
                                    <option value="0">Tất cả</option>
                                    @foreach (var items in ViewBag.HocPhan)
                                    {
                                        <option value="@items.Value">@items.Text</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <hr />
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="text-left">
                                    <button type="submit" id="btnFilter" name="btnFilter" class="btn btn-primary btn-tone m-r-5">Lọc dữ liệu</button>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="text-right">
                                    <button class="btn btn-primary m-r-5" id="btnAdd">Thêm mới</button>
                                    <button class="btn btn-success m-r-5" data-toggle="modal" data-target="#importExcelModal">Import từ Excel</button>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>

            <!-- Modal Import Excel -->
            <div class="modal fade" id="importExcelModal">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Import môn học từ Excel</h5>
                            <button type="button" class="close" data-dismiss="modal">
                                <i class="anticon anticon-close"></i>
                            </button>
                        </div>
                        <div class="modal-body">
                            <form id="importExcelForm" enctype="multipart/form-data">
                                <div class="form-group">
                                    <label for="excelFile">Chọn file Excel</label>
                                    <input type="file" class="form-control" id="excelFile" name="excelFile" accept=".xlsx, .xls">
                                </div>
                                <p style="color:red; font-style:italic">* Export dữ liệu lớp và học phần để điền vào cho chính xác</p>
                                <button type="submit" class="btn btn-success btn-tone m-r-5">Upload</button>
                                <a href="~/DataExport/Mau/Mau_Upload_Mon_Hoc.xlsx" download>
                                    <button type="button" class="btn btn-info btn-tone m-r-5">Tải file mẫu</button>
                                </a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!-- End Modal Import Excel -->
            <!--Modal-->
            <div class="modal fade" id="bd-example-modal-lg">
                <div class="modal-dialog modal-lg">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title h4"></h5>
                            <button type="button" class="close" data-dismiss="modal">
                                <i class="anticon anticon-close"></i>
                            </button>
                        </div>
                        <div class="modal-body">
                            <form id="form-validation">
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label control-label">Thuộc năm học</label>
                                    <div class="col-sm-10">
                                        <select class="form-control select2" id="nam-hoc-val">
                                            @foreach (var items in ViewBag.Year)
                                            {
                                                <option value="@items.Value">@items.Text</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                            </form>
                            <form id="form-validation">
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label control-label">Thuộc hệ đào tạo</label>
                                    <div class="col-sm-10">
                                        <select class="form-control select2" id="hdt-val">
                                            @foreach (var items in ViewBag.HDT)
                                            {
                                                <option value="@items.Value">@items.Text</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                            </form>
                            <form id="form-validation">
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label control-label">Thuộc học phần</label>
                                    <div class="col-sm-10">
                                        <select class="form-control select2" id="hoc-phan-val">
                                            @foreach (var items in ViewBag.HocPhan)
                                            {
                                                <option value="@items.Value">@items.Text</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                            </form>
                            <form id="form-validation">
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label control-label">Mã môn học</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" id="ma-mon-hoc-val" placeholder="Nhập tên Lớp ... *">
                                    </div>
                                </div>
                            </form>
                            <form id="form-validation">
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label control-label">Tên môn học</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" id="ten-mon-hoc-val" placeholder="Nhập tên Lớp ... *">
                                    </div>
                                </div>
                            </form>
                            <form id="form-validation">
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label control-label">Thuộc lớp</label>
                                    <div class="col-sm-10">
                                        <select class="form-control select2" id="lop-val">
                                            @foreach (var items in ViewBag.Lop)
                                            {
                                                <option value="@items.Value">@items.Text</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                            </form>
                            <form id="form-validation">
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label control-label">Giảng viên giảng dạy môn học (có thể chọn nhiều giảng viên)</label>
                                    <div class="col-sm-10">
                                        <select class="form-control select2 " name="states[]" multiple="multiple" id="giang-vien-val">
                                            <!---->
                                        </select>
                                    </div>
                                </div>
                            </form>
                            <div class="modal-footer">
                                <!--data-->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!--End Modal-->
            <div id="loadingSpinner" style="display:none" class="loader"></div>
            <div class="m-t-25" id="showalldata">
                <div class="table-container" id="dap-vien-khao-sat">
                    <h2 id="title_notification" class="text-uppercase" style="color:red">vui lòng chọn chức năng lọc để tiếp tục</h2>
                    <table class="table table-bordered" id="mon-hoc-table">
                        <thead style="color:black; text-align:center; font-weight:bold" id="showthead">
                            <!--Load Thead-->
                        </thead>
                        <tbody id="showdata">
                            <!--Load Data-->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section scriptsAdmin{
    <script src="~/Areas/Admin/Scripts/ChucNangNguoiDung/DanhSachMonHoc.js"></script>
}