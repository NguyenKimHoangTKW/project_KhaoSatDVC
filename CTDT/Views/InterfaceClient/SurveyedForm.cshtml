
@{
    ViewBag.Title = "Bộ phiếu đã khảo sát - TDMU";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="ftco-section bg-light py-4">
    <div class="container">
        <div class="text-center mb-4">
            <h2 class="font-weight-bold">BỘ PHIẾU ĐÃ KHẢO SÁT</h2>
        </div>

        <div class="page-header mb-4">
            <hr />
            <fieldset class="border rounded p-3">
                <legend class="w-auto px-3">Chức năng</legend>
                <div class="form-group">
                    <label for="Year" class="font-weight-bold text-dark" style="font-size: 16px;">Lọc theo năm học</label>
                    <select class="form-control" id="Year">
                        @foreach (var item in ViewBag.Year)
                        {
                            <option value="@item.Value">@item.Text</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label for="Year" class="font-weight-bold text-dark" style="font-size: 16px;">Lọc theo hệ</label>
                    <select class="form-control" id="Hedaotao">
                        @foreach (var item in ViewBag.Hedaotao)
                        {
                            <option value="@item.Value">@item.Text</option>
                        }
                    </select>
                </div>
            </fieldset>
        </div>

        <div class="accordion mb-4" id="accordion-default">
            <!--data-->
        </div>
    </div>
</section>

@section scripts{
    <script src="~/Scripts/User/Bophieudakhaosat.js"></script>
}
